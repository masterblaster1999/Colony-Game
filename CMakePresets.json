{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 24, "patch": 0 },

  "configurePresets": [
    {
      "name": "windows-base",
      "displayName": "Windows (VS 2022, x64)",
      "description": "Base Windows preset (Visual Studio 2022).",
      "generator": "Visual Studio 17 2022",
      "architecture": { "value": "x64" },
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_POLICY_DEFAULT_CMP0069": "NEW",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELWITHDEBINFO": "ON",

        // Remove these two if you don't use vcpkg:
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_FEATURE_FLAGS": "manifests,versions"
      }
    },

    {
      "name": "dev-windows",
      "displayName": "Dev (Debug, Windows)",
      "inherits": "windows-base",
      "cacheVariables": {
        "COLONY_WERROR": "OFF"              // project-specific toggle if you use it
      }
    },

    {
      "name": "asan-windows",
      "displayName": "ASan (Debug, Windows)",
      "inherits": "windows-base",
      "cacheVariables": {
        "COLONY_ENABLE_ASAN": "ON",         // we'll read this in CMakeLists.txt
        "CMAKE_MSVC_DEBUG_INFORMATION_FORMAT": "ProgramDatabase"  // ensures /Zi
      }
    },

    {
      "name": "relwithdebinfo-windows",
      "displayName": "RelWithDebInfo (IPO on, Windows)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": ""              // ignored by multi-config generators, kept for IDEs
      }
    }
  ],

  "buildPresets": [
    {
      "name": "dev-windows",
      "configurePreset": "dev-windows",
      "configuration": "Debug"
    },
    {
      "name": "asan-windows",
      "configurePreset": "asan-windows",
      "configuration": "Debug"
    },
    {
      "name": "relwithdebinfo-windows",
      "configurePreset": "relwithdebinfo-windows",
      "configuration": "RelWithDebInfo"
    }
  ],

  "testPresets": [
    {
      "name": "dev-windows",
      "configurePreset": "dev-windows",
      "configuration": "Debug",
      "output": { "outputOnFailure": true }
    }
  ]
}
