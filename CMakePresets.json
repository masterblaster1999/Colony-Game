{
  "version": 6,
  "configurePresets": [
    {
      "name": "win-vs2022-vcpkg",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL",
        "BUILD_TESTING": "ON"
      }
    }
  ],
  "buildPresets": [{ "name": "win-debug", "configurePreset": "win-vs2022-vcpkg", "configuration": "Debug" }],
  "testPresets": [{ "name": "win-test", "configurePreset": "win-vs2022-vcpkg" }]
}
