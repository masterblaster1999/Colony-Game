{
  "version": 1,
  "bindings": {
    "MoveForward": ["W", "Up"],
    "MoveBackward": ["S", "Down"],
    "MoveLeft": ["A", "Left"],
    "MoveRight": ["D", "Right"],
    "MoveDown": ["Q"],
    "MoveUp": ["E"],

    // Example chord binding (distinct action).
    // Tip: you can use Shift/LShift/RShift (same for Ctrl/Alt) to be as specific as you want:
    "MoveForwardFast": ["Shift+W"],

    // Modifier action (Shift/LShift/RShift are all valid; same pattern for Ctrl/Alt):
    "SpeedBoost": ["Shift"],

    // Mouse buttons are now bindable too:
    "CameraOrbit": ["MouseLeft"],
    "CameraPan": ["MouseMiddle", "MouseRight", "Shift+MouseLeft"],

    // Developer quality of life:
    "ReloadBindings": ["F5"]
  }
}
